<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Bienvenue sur Rent-a-Comic{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
            <link href="{{ asset('css/style.css') }}" rel="stylesheet" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="container">
        <header>
            <h1>Rent-A-Comic</h1>
            <nav>
                <ul class="nav nav-pills ">
                    <li><a href="{{ path('home') }}" title="BDloc | Accueil">Accueil</a></li>
                    <li><a href="{{ path('catalogue') }}" title="Catalogue">Catalogue</a></li>
                    <li><a href="{{ path('panier') }}" title="Panier">Mon Panier</a></li>
                </ul>
            </nav>
                <div class="login">
                    <form action="" method="POST">
                        <label for="username">Username:</label>
                        <input type="text" id="username" name="_username" value="" />
                        <label for="password">Password:</label>
                        <input type="password" id="password" name="_password" a />
                    </form>
                </div>
                
            {% block header %}{% endblock %}
        </header>
        <section>
            {% block body %}{% endblock %}
        </section>
        <footer>
            {% block footer %}{% endblock %}
        </footer>
        {% block javascripts %}{% endblock %}

        </div>
    </body>
</html>
